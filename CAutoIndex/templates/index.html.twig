{% extends "layout.html.twig" %}

{% block content %}
<div class="page-header">
    <h1><a href="/{{ app.subDir }}" class="folder" data-in="0">{{ dir.rootName }}</a>
    {% for part in dir.parts %}
    {% set url = (url is defined ? url : '') ~ '/' ~ part  %} 
    / {% if loop.last %}{{ part }}{% else %}<a href="{{ url }}" class="folder" data-in="0">{{ part }}</a>{% endif %}
    {% endfor %}
    </h1>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default" id="list">
            <div class="panel-heading">
                <span class="pull-right">{{ dir.files|length }} elemento{{ dir.files | length == 1 ? '' : 's' }}</span>
                <div class="panel-loader"></div>
                <h3 class="panel-title">{{ dir.rootName }}</h3>
            </div>
            {% include 'list.html.twig' %}
        </div>
    </div>
</div>
{% endblock %}



{% block javascripts %}
<script type="text/javascript">
var current = '{{ dir.urlPath }}', rootDir = '{{ dir.rootName }}', subDir = '{{ app.subDir }}';
$.fx.off = {{ app.disableAnimations ? 'true' : 'false' }};
</script>
<script src="/{{ app.subDir }}{{ dir.sysDir }}/js/index.js" type="text/javascript"></script>
{% endblock %}